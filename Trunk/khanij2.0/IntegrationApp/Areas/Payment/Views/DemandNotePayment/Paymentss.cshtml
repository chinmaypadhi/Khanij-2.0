                @Html.HiddenFor(s=>s.PaymentMode)
                @Html.HiddenFor(s=>s.PaymentBank)
                @Html.HiddenFor(s=>s.PMode)
                @Html.HiddenFor(s=>s.NetBanking_mode)
                @Html.HiddenFor(s=>s.DemandNoteCode)
