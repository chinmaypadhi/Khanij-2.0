@model IEnumerable<EstablishmentEf.AuthoritySettingQuery>;
@{
    ViewData["Title"] = "ViewAuthoritySetting";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

@if (TempData["Masg"] != null)
{
    <script>
        swal("",'@TempData["Masg"]', "success");
    </script>
    TempData["Masg"] = null;
}
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_navigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="@Url.Content("~/LeaveManagement/LeaveManagement/AddAuthoritySetting")">
                                Add AuthoritySetting
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link active" href="">
                                View AuthoritySetting
                            </a>
                        </li>
                    </ul>

                    @Html.Partial("_util")
                </div>

                <section class="box form-container">


                    <div class="content-body pt-0">
                        <div class="legend-box">
                            <ul class="d-flex mb-1 justify-content-end list-unstyled">
                                <li><span class="bg-success"></span> Active</li>
                                <li><span class="bg-warning"></span> Inactive</li>
                            </ul>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                    <table id="table-exports" class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th width="30px">Sl#</th>
                                                <th>State</th>
                                                <th>District</th>
                                                <th>Verify Designation</th>
                                                <th>Forward Department</th>
                                                <th>Forward Designation</th>
                                                <th width="60px" class="noprint">Action</th>


                                            </tr>
                                        </thead>
                                        <tbody>

                                            @{
                                                var count = 0;
                                                foreach (var item in Model)
                                                {
                                                    count++;
                                                    <tr class="active-row">

                                                        <td>@count</td>
                                                        <td>@item.StateName</td>
                                                        <td>@item.DistrictName</td>
                                                        <td>@item.VerifyDesignation</td>
                                                        <td>@item.ForwardDepartment</td>
                                                        <td>@item.ForwardDesignation</td>
                                                        <td class="noprint">
                                                            <a href="@Url.Content("~/LeaveManagement/LeaveManagement/AddAuthoritySetting/")@item.intAuthorityId" class="btn-floating btn-outline-primary btn-sm waves-effect waves-light" title="" data-original-title="Edit"><i class="icon-pencil-alt-solid"></i></a>
                                                            <a href="@Url.Content("~/LeaveManagement/LeaveManagement/DeleteAuthoritySetting/")@item.intAuthorityId" class="btn-floating btn-outline-danger btn-sm waves-effect waves-light" onclick="return confirm('Are you sure to Delete?')" data-toggle="tooltip" data-placement="top" title="Delete"><i class="far fa-trash-alt"></i></a>

                                                        </td>
                                                    </tr>

                                                }
                                            }


                                        </tbody>
                                    </table>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>

<script>

    $(document).ready(function () {
        loadNavigation('ViewAuthoritySetting', 'glempprofile', 'plofficetype', 'tl', 'Leave Management', 'View Authority Setting', ' ');

        $('.searchableselect').searchableselect();

        $('#datatable').DataTable();
        $('.shorting-lnk').click(function () {
            $('.shorting-lnk i').toggleClass('fa-sort-amount-up-alt fa-sort-amount-down-alt ');
        });

    });
</script>

