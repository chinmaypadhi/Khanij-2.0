@model IEnumerable<EstablishmentEf.LeaveInboxQuery>
@{
    ViewData["Title"] = "ViewLeaveInbox";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

@*@inject EstablishmentApp.KhanijSecurity.KhanijIDataProtection protector;*@
@if (TempData["msg"] != null)
{
    <script>
        var vv = '@TempData["msg"]';
        if (vv == 1) {
            swal("", "leave inbox successfully.", "success");
        }
        else if (vv == 2) {
            swal("", "leave inbox allready exists.", "warning");
        }
        else if (vv == 3) {
            swal("", "leave inbox updated sucessfully", "success");
        }
        else if (vv == 4) {
            swal("", "leave inbox  deleted sucessfully", "success");
        }
        else if (vv == 5) {
            swal("", "leave inbox  allredy approved", "warning");
        }
        else {
            swal("", "Something Errror occured. Please Try After Sometime!!", "error");
        }
    </script>

    TempData["msg"] = null;

}

<section class="wrapper main-wrapper row">
    <div class="col-12">
        @*@Html.Partial("_navigation")*@
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">

                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Content("~/LeaveManagement/LeaveManagement/LeaveInbox")">
                                Leave Inbox
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                View Leave Inbox
                            </a>
                        </li>
                    </ul>

                    @*@Html.Partial("_util")*@
                </div>

                <section class="box form-container">

                    <div class="content-body pt-0">
                        <div class="legend-box">
                            <ul class="d-flex mb-1 justify-content-end list-unstyled">
                                <li><span class="bg-success"></span> Active</li>
                                <li><span class="bg-warning"></span> Inactive</li>
                            </ul>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                              
                                    <table id="table-exports" class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th width="30px">Sl#</th>
                                                <th>Employee Name</th>
                                                <th>Designation</th>
                                                <th>Office Level</th>
                                                <th>Leave Type</th>
                                                <th>Applied On</th>
                                                <th>From Date</th>
                                                <th>To Date</th>
                                                <th>No. of days</th>
                                                <th>Reason</th>
                                                <th>Status</th>
                                                <th>Pending with/ Approved by</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                foreach (var item in Model)
                                                {
                                                    count++;
                                                    <tr class="active-row">

                                                        <td>@count</td>
                                                        <td>@item.EmployeeName</td>
                                                        <td>@item.Designation</td>
                                                        <td>@item.OfficeLevel</td>
                                                        <td>@item.LeaveType</td>
                                                        <td>@item.AppliedOn</td>
                                                        <td>@item.dtFromDate</td>
                                                        <td>@item.dtToDate</td>
                                                        <td>@item.NoOfDays</td>
                                                        <td>@item.varReason</td>
                                                        <td>@item.Status</td>
                                                        <td>@item.ActionTakenTo</td>

                                                    </tr>

                                                }
                                            }

                                        </tbody>
                                    </table>
                                
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>

<script>

    $(document).ready(function () {
        loadNavigation('ViewLeaveInbox', 'glempprofile', 'plofficetype', 'tl', 'Leave Management', 'View Leave Inbox', ' ');

        $('.searchableselect').searchableselect();


        $('.shorting-lnk').click(function () {
            $('.shorting-lnk i').toggleClass('fa-sort-amount-up-alt fa-sort-amount-down-alt ');
        });

    });
</script>

