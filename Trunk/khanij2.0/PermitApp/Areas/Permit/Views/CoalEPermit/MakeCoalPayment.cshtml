                                            }
                                            else
                                            {
                                                @(Html.TextBoxFor(model => model.ChallanDate, new { @class = "form-control-plaintext", @Value = "Online Payment" }))
                                            }
                                        </div>

                                        <label class="col-lg-3 col-md-4 col-sm-12 col-form-label font-weight-bolder">Payment Date</label>
                                        <div class="col-lg-3 col-md-8 col-sm-12">
                                            <span class="colon">:</span>
                                            @(Html.TextBoxFor(model => model.ChallanDate, new { @class = "form-control-plaintext" }))
                                        </div>

                                    </div>

                                }
                                else
                                {
                    <div class="row">
                        <label class="col-lg-3 col-md-4 col-sm-12  col-form-label font-weight-bolder">Challan Number</label>
                        <div class="col-lg-3 col-md-8 col-sm-12">
                            <span class="colon">:</span>

                            @(Html.TextBoxFor(model => model.ChallanNumber, new { @class = "form-control-plaintext" }))
                        </div>




                        <label class="col-lg-3 col-md-4 col-sm-12  col-form-label font-weight-bolder">Challan Date</label>
                        <div class="col-lg-3 col-md-8 col-sm-12">
                            <span class="colon">:</span>

                            @(Html.TextBoxFor(model => model.ChallanDate, new { @class = "form-control", @readonly = "readonly" }))
