@model MasterEF.UserRightsEF;
@{
    ViewData["Title"] = "ViewUserAccess";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@using MasterApp.Web;
<section class="wrapper main-wrapper row">
    <div class="col-12">

        @Html.Partial("_CMSnavigation")
        <div class="button-links text-right">
            <a href="#" class="btn btn-primary btn-sm active">User Wise Access Permission</a>
            <a href="@Url.Content("~/Master/AccessPermission/ViewUserTypeAcess")" class="btn btn-primary btn-sm ">User Type Wise Menu Assignment</a>
        </div>
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Content("~/Master/AccessPermission/AcessUserId")">
                                Assign Rights
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                View
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_CMSutil")

                </div>

                <section class="box form-container">

                    <div class="content-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <table class="table table-sm table-bordered" id="table-exports">
                                    <thead>
                                        <tr>
                                            <th>
                                                User Name
                                            </th>
                                            <th>
                                                Designation
                                            </th>
                                            <th>
                                                User Type
                                            </th>
                                            <th>
                                                Total Roles
                                            </th>
                                            <th width="60"> Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var b in ViewBag.ViewList)
                                        {
                                            <tr>
                                                <td>@b.UserName </td>
                                                <td>@b.RoleName </td>
                                                <td>@b.RoleTypeName </td>
                                                <td>@b.Total </td>

                                                <td class="noprint text-center">
                                                    <a href="@CustomQueryStringHelper.EncryptString("Master","AcessUserId","AccessPermission",new {id=b.UserId })"
                                                       class="btn-floating btn-outline-primary btn-sm"
                                                       title="Edit"><i class="icon-pencil-alt-solid"></i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        loadNavigation('ViewApplicationSetting', 'glTMng', 'plApplicationSetting', 'tl', 'Masters', 'Access Permission', '');

        $('.searchableselect').searchableselect();
    });
</script>