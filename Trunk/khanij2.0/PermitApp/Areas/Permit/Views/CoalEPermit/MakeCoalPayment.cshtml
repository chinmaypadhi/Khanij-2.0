                                }
                            }
                            else {
                                alert("Please make sure your file is less than 2 MB!");
                                return false;
                            }
                        }
                        else {
                            alert("Please select file!");
                        }
                    }
                    else {
                        lert("Please enter Challan Date!");
                        $("#ChallanDate").focus();
                    }
                }
                else {
                    alert("Please enter Challan Number!");
                    $("#ChallanNumber").focus();
                }
            }
        }
    }
