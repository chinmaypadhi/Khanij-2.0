@model IEnumerable<HomeEF.ViewPageModel>
@{
    ViewData["Title"] = "Archive";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <script>
        swal("",'@TempData["Message"]',"success");
    </script>
}
<script>
    deleteMe = "yes";
    activetMe = "yes";
    $(document).ready(function () {
        loadNavigation('Archive', 'glhelpdesk', 'plraiseticket', 'tl', 'CMS', 'Manage Pages', ' ');
        $('.searchableselect').searchableselect();
        $('#datatable').DataTable();
        $('.shorting-lnk').click(function () {
            $('.shorting-lnk i').toggleClass('fa-sort-amount-up-alt fa-sort-amount-down-alt ');
        });
         $("#ckbCheckAll").click(function () {
            $(".checkBoxClass").prop('checked', $(this).prop('checked'));
        });
        $("#deleteIcon").click(function () {
            var idsToSend = new Array();
                $('table [type="checkbox"]').each(function () {
                    if ($(this).is(':checked')) {
                        idsToSend.push($(this).val());
                    }
                });
            if (idsToSend.length <= 0) {
                swal("", "Please select Notification to Delete !", "warning");
                return false;
            }
            else {
                if (confirm("Are you sure to Delete?")) {
                    $.ajax({
                        type: "POST",
                        url: "/Website/Page/Delete",
                        data: {
                            arr: JSON.stringify(idsToSend)
                        },
                        dataType: "json",
                        success: function (result) {
                            if (result == 4) {
                                swal("", "Page Deleted Sucessfully.", "success");
                            }
                            else {
                                swal("", "Something Errror occured. Please Try After Sometime!!", "error");
                            }
                            window.location.href = '@Url.Action("Archive", "Page", new { Area = "Website" })';
                        }
                    });
                    idsToSend = [];
                }
            }
        });
         $("#activeIcon").click(function () {
            var idsToSend = new Array();
                $('table [type="checkbox"]').each(function () {
                    if ($(this).is(':checked')) {
                        idsToSend.push($(this).val());
                    }
                });
            if (idsToSend.length <= 0) {
                swal("", "Please select Notification to Active !", "warning");
                return false;
            }
            else {
                if (confirm("Are you sure to Active?")) {
                    $.ajax({
                        type: "POST",
                        url: "/Website/Page/Active",
                        data: {
                            arr: JSON.stringify(idsToSend)
                        },
                        dataType: "json",
                        success: function (result) {
                            if (result == 4) {
                                swal("", "Page Active Sucessfully!!", "success");
                            }
                            else {
                                swal("", "Something Errror occured. Please Try After Sometime!!", "error");
                            }
                            window.location.href = '@Url.Action("Archive", "Page", new { Area = "Website" })';
                        }
                    });
                    idsToSend = [];
                }
            }
        });
    });
</script>
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_CMSnavigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Website/Page/Add">
                                Add
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Website/Page/ViewList">
                                View
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Archive
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_util")
                </div>
                <section class="box form-container">
                    <div class="content-body">

                        <div class="row">
                            <div class="col-sm-12">
                                <div id="viewtable">
                                    <table id="datatable" class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th width="20px" class="text-center noprint">
                                                    <input type="checkbox" id="ckbCheckAll">
                                                </th>
                                                <th width="30px">Sl#</th>
                                                <th>Page Name</th>
                                                <th>Page Alias</th>
                                                @*<th>Page Title</th>
                                                    <th>Page Snippet</th>
                                                    <th>Meta Title</th>
                                                    <th>Meta Keyword</th>
                                                    <th>Meta Description</th>*@
                                                <th>Meta Image</th>
                                                <th>Featured Image</th>
                                                <th>Link Type</th>
                                                <th>URL</th>
                                                <th>Windows Status</th>
                                                @*<th>Page Type</th>
                                                    <th>Plugin Type</th>
                                                    <th>Page Content</th>*@
                                                <th>Created on</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                foreach (var item in Model)
                                                {
                                                    count++;
                                                    <tr>
                                                        <td class="text-center noprint">
                                                            <input type="checkbox" class="checkBoxClass" id="chk" value="@item.INT_PAGE_ID">
                                                        </td>
                                                        <td>@count</td>
                                                        <td>@item.VCH_PAGE_NAME</td>
                                                        <td>@item.VCH_PAGE_NAME_ALIAS</td>
                                                        @*<td>@item.VCH_PAGE_TITLE</td>
                                                            <td>@item.VCH_PAGE_SNIPPET</td>
                                                            <td>@item.VCH_META_TITLE</td>
                                                            <td>@item.VCH_META_KEYWORD</td>
                                                            <td>@item.VCH_META_DESCIPTION</td>*@
                                                        <td class="text-center noprint"><a href='~/@item.VCH_META_IMAGE_NAME' data-original-title="Download" target="_blank"><i class="icon-file-pdf-solid h5 text-danger"></i></a></td>
                                                        <td class="text-center noprint"><a href='~/@item.VCH_FEATURE_IMAGE_NAME' data-original-title="Download" target="_blank"><i class="icon-file-pdf-solid h5 text-danger"></i></a></td>
                                                        <td>@item.BIT_LINK_TYPE</td>
                                                        <td>@item.VCH_URL</td>
                                                        <td>@item.BIT_WINDOW_STATUS</td>
                                                        @*<td>@item.INT_PAGE_TYPE</td>
                                                            <td>@item.INT_PLUGIN_TYPE</td>
                                                            <td>@item.VCH_PAGE_CONTENT</td>*@
                                                        <td>@item.DTM_CREATED_ON</td>

                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>


