
@{
    ViewData["Title"] = "StoneSandBookingStatus";
    Layout = "~/Views/Shared/_WebHeaderLayout.cshtml";
}
@inject Microsoft.Extensions.Options.IOptions<userregistrationEF.KeyList> metaOptions

@{
    var options = metaOptions.Value;
}
<style>
    .refesh-btn {
        position: absolute;
        top: 4px;
        font-size: 21px;
        border: 1px solid #ddd;
        padding: 1px 10px;
        background-color: #dddddd6e;
        border-radius: 5px;
        margin-left: 0.5rem;
    }
</style>
<div class="inner-naviagtion">
    <div class="container">
        <nav aria-label="breadcrumb mb-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@options.HomeUrl"><span class="fas fa-home"></span></a></li>
                <li class="breadcrumb-item text-white" aria-current="page">Registrations</li>
                <li class="breadcrumb-item text-white" aria-current="page">Sand & Stone Status</li>
            </ol>
        </nav>
    </div>
</div>
<div class="inner-content">
    <div class="container">
        <h3 class="heading">Check Status of Sand & Stone Booking </h3>
        <div class="card shadow mb-4 sand-stone-card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 pr-lg-2">
                        <div class="section1">
                            <div class="col-12 form-group">
                                <label class="col-form-label">Enter Phone No.<span class="text-danger">*</span></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-12 form-group mt-4">
                                <img src="/CMSimg/captcha.png" alt="captcha image">
                                <a href="#" class="refesh-btn"><span class="fas fa-sync"></span></a>
                            </div>
                            <div class="col-12 form-group">
                                <label class="col-form-label">Enter Captcha <span class="text-danger">*</span></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-12 form-group">
                                <button type="button" class="btn btn-dark btn-lg otp-get-btn" data-toggle="modal" data-target="#security-msg">Submit</button>
                            </div>
                        </div>
                        <div class="section2">
                            <div class="col-12 form-group">
                                <label class="col-form-label font-weight-bolder">Enter OTP<span class="text-danger">*</span></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-12 form-group">
                                <button type="button" class="btn btn-success btn-lg subumit-otp">Submit</button>
                            </div>
                        </div>


                    </div>
                    <div class="col-lg-6">
                        <img src="../../CMSimg/sand-stone.jpg" class="w-100 h-100 d-lg-block d-none" alt="sand and stone image" />
                    </div>
                </div>
            </div>
        </div>







        <div class="bg-light pt-md-3 pb-md-0 pb-3 px-3 mb-4 seach-pannel">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                        <label>Mineral Name</label>
                        <select class="form-control">
                            <option>Select</option>
                            <option>Sand</option>
                            <option>Stone</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                        <label>From Date</label>
                        <div class="input-group">
                            <input id="txtTenderDate1" type="text" class="form-control datepicker">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="txtTenderDate1"><i class="far fa-calendar"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                        <label>To Date</label>
                        <div class="input-group">
                            <input id="txtTenderDate1" type="text" class="form-control datepicker">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="txtTenderDate1"><i class="far fa-calendar"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="invisible d-md-block d-none">button</label>
                    <button type="button" class="btn btn-success d-flex btn-search">Search</button>
                </div>
            </div>
        </div>
        <div class="table-responsive sand-status-table">
            <table>
                <thead>
                    <tr>
                        <th>Sl#</th>
                        <th>Applied on</th>
                        <th>Mineral Name</th>
                        <th>Mineral Quantity <small>CFT</small> </th>
                        <th>Lessee/Licensee</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>02 Jan 2022</td>
                        <td>Stone</td>
                        <td>400</td>
                        <td>JK Lakshmi Cement Ltd</td>
                        <td class="text-warning">Pending</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>12 Jan 2022</td>
                        <td>Sand</td>
                        <td>350</td>
                        <td>JK Lakshmi Cement Ltd</td>
                        <td class="text-success">Approved</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>20 Jan 2022</td>
                        <td>Stone</td>
                        <td>37 to 70</td>
                        <td>JK Lakshmi Cement Ltd</td>
                        <td class="text-danger">Rejected</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>
<div class="modal fade" id="security-msg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <i class=" fas fa-check-circle" style="color: #76b333;font-size: 4rem;"></i>
                <h5 class=" mt-3">
                    Please enter the OTP <br /> which has send to your phone number
                </h5>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".section2").hide();
        $(".otp-get-btn").click(function () {
            $(".section2").show();
            $(".section1").hide();
        });

        $(".seach-pannel").hide();
        $(".subumit-otp").click(function () {
            $(".seach-pannel").show();
            $(".sand-stone-card").hide();

        });

        $(".sand-status-table").hide();
        $(".btn-search").click(function () {
            $(".sand-status-table").show();
        });

    });
</script>
