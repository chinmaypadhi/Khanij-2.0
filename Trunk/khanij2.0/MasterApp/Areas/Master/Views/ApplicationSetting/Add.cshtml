@model MasterEF.ApplicationSettingmaster;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@if (TempData["msg"] != null)
{
    <script>
        swal("", '@TempData["msg"]', "success");
    </script>
}

@if (ViewBag.msg != null)
{
    <script>
        swal("", '@ViewBag.msg',"success");
    </script>
}
<script>
    indicateMe = "yes"
    $(document).ready(function () {
        loadNavigation('Add', 'glRoleRes', 'plUser', 'tl', 'Master', 'Application Setting', ' ');
        $("#Update").click(function () {
            debugger;
            if ($('#EXPIRY_DATE_ALERT_COUNT').val() == "") {
                swal("", "Please Enter Expiry Alert Count", "warning");
                $('#EXPIRY_DATE_ALERT_COUNT').focus();
                return false;
            }
            else if ($('#TP_OFFLINE_NET_WEIGHT').val() == "") {
                swal("", "Please Enter TP Offline Net Weight", "warning");
                $('#TP_OFFLINE_NET_WEIGHT').focus();
                return false;
            }
            else if ($('#FORWARDINGNOTE_GRACE_WEIGHT').val() == "") {
                swal("", "Please Enter RTP Trip Close Tolerance Weight", "warning");
                $('#FORWARDINGNOTE_GRACE_WEIGHT').focus();
                return false;
            }
            else if ($('#TIMELINE_OF_REPLY_OF_NOTICE').val() == "") {
                swal("", "Please Enter Timeline of Reply of Notice", "warning");
                $('#TIMELINE_OF_REPLY_OF_NOTICE').focus();
                return false;
            }
            else if ($('#EXPIRY_DATE_INTIMATION').val() == "") {
                swal("", "Please Enter Validity Expired Intimation", "warning");
                $('#EXPIRY_DATE_INTIMATION').focus();
                return false;
            }
        });
    });
    var specialKeys = new Array();
    specialKeys.push(8); //Backspace
    function numericdotOnly(elementRef) {
        var keyCodeEntered = (event.which) ? event.which : (window.event.keyCode) ? window.event.keyCode : -1;
        if ((keyCodeEntered >= 48) && (keyCodeEntered <= 57)) {
            return true;
        }
        // '.' decimal point...
        else if (keyCodeEntered == 46) {
            // Allow only 1 decimal point ('.')...
            if ((elementRef.value) && (elementRef.value.indexOf('.') >= 0))
                return false;
            else
                return true;
        }
        return false;
    }
    function numericOnly() {
        var keycode = event.which;
        if (!(event.shiftKey == false && (keycode == 8 || keycode == 37 || keycode == 39 || (keycode >= 48 && keycode <= 57)))) {
            event.preventDefault();
            return false;
        }
    }
</script>

<section class="wrapper main-wrapper row">
    <div class="col-12">
        <!-- MAIN CONTENT AREA STARTS -->
        @Html.Partial("_CMSnavigation")
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Add
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Master/ApplicationSetting/ViewList">
                                View
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_CMSutil")
                    @*<uc1:util runat="server" ID="util" />*@
                </div>
                <section class="box form-container">
                    <div class="content-body">
                        <h5> Application Setting</h5>
                        @using (Html.BeginForm("Add", "ApplicationSetting", FormMethod.Post, new { AUTOCOMPLETE = "Off", id = "form1" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">Expiry Alert Day <span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                            @Html.TextBoxFor(m => m.EXPIRY_DATE_ALERT_COUNT, new { @class = "form-control", @autofocus = "autofocus", @width = "400", onkeypress = "return numericOnly(this)", maxlength = "5" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.EXPIRY_DATE_ALERT_COUNT)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">Tp Offline Net Weight <span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                            @Html.TextBoxFor(m => m.TP_OFFLINE_NET_WEIGHT, new { @class = "form-control", @autofocus = "autofocus", @width = "400", onkeypress = "return numericdotOnly(this)", maxlength = "10" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.TP_OFFLINE_NET_WEIGHT)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">RTP Trip Close Tolerance Weight <span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                            @Html.TextBoxFor(m => m.FORWARDINGNOTE_GRACE_WEIGHT, new { @class = "form-control", @autofocus = "autofocus", @width = "400", onkeypress = "return numericdotOnly(this)", maxlength = "10" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.FORWARDINGNOTE_GRACE_WEIGHT)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">Timeline of Reply of Notice <span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                            @Html.TextBoxFor(m => m.TIMELINE_OF_REPLY_OF_NOTICE, new { @class = "form-control", @autofocus = "autofocus", @width = "400", onkeypress = "return numericdotOnly(this)", maxlength = "10" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.TIMELINE_OF_REPLY_OF_NOTICE)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">Validity Expired Intimation <span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                            @Html.TextBoxFor(m => m.EXPIRY_DATE_INTIMATION, new { @class = "form-control", @autofocus = "autofocus", @width = "400", onkeypress = "return numericdotOnly(this)", maxlength = "10" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.EXPIRY_DATE_INTIMATION)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">SMS Send <span class="text-danger">*</span></label>
                                        <div class="col-sm-1">
                                            @Html.CheckBoxFor(m => m.SMS_SENT, new { @class = "form-control", @autofocus = "autofocus", @width = "400" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.SMS_SENT)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group row">
                                        <label for="inputLoginId" class="col-sm-4 col-form-label">Email Send <span class="text-danger">*</span></label>
                                        <div class="col-sm-1">
                                            @Html.CheckBoxFor(m => m.EMAIL_SENT, new { @class = "form-control", @autofocus = "autofocus", @width = "400" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.EMAIL_SENT)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 offset-lg-2 offset-md-4">
                                    <input type="submit" value='@ViewBag.Button' class="btn btn-primary btn-md ml-0" name="Submit" id="Update" />
                                    <input type="reset" name="Reset" class="btn btn-danger btn-md" value="Reset" />
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>


