
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}


<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_navigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-lg-8">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                               Profile 
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_util")
                </div>
                <section class="box form-container">
                    <div class="content-body">
                        <div class="d-md-flex   align-items-baseline mb-3">
                            <div class="mr-md-4 mb-md-0 mb-3">
                                <img src="/img/profile.jpg" alt="user-image" width="150px" height="150px">
                            </div>
                            <div>
                                <span class="file-input btn btn-success btn-file">
                                    Upload <input type="file" multiple>
                                </span>
                                
                                <button type="button" class="btn btn-outline-danger">Reset</button>
                                <p class="mt-2 mb-0">Allowed JPG, GIF or PNG. Max size of 800kB</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="col-form-label">Name</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Khusbu kumari singh deo">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Phone Number</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="9937653476">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Email Id</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Khusbukumarisinghdeo@gmail.com">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label">Address</label>
                                <div class="form-group">
                                    <textarea  rows="2" class="form-control" placeholder="Sail Bhilai Steel Plant Bilaspur"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="button" class="btn btn-success">Submit</button>
                                <button type="button" class="btn btn-outline-danger">Reset</button>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>






