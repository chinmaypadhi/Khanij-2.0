@model IEnumerable<MasterEF.LesseeMiningPlanViewModel>
@{
    ViewData["Title"] = "Compare";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <script>
        swal("",'@TempData["Message"]',"success");
    </script>
}
<style type="text/css">
    .compare td.field-name {
        font-size: .9rem;
        font-weight: bold;
    }
</style>
<script>
    backMe="yes"
    $(document).ready(function () {
        loadNavigation('Compare', 'glUIS', 'pllesseprof', 'tl', 'Lessee Profile', 'Mining Plan', ' ');
        if (@Model.ElementAt(1).STATUS == 1) {
            $('.btnsave').show();
        }
        if ('@Model.ElementAt(1).MineralTypeName' == "Minor Mineral") {
            $("#LeaseCTO-tab").text('Quarry Lease Plan');/*Tab Text*/
            $("#h5text").text('Quarry Lease Plan Details');/*Header Text*/
            $("#lblApprovalDate").text('Quarry Lease Plan Approval Date');/*Label Text*/
            $("#lblApprovalNo").text('Quarry Lease Plan Approval Number');/*Label Text*/
            $("#lblValidFrom").text('Quarry Lease Plan Valid From');/*Label Text*/
            $("#lblValidTo").text('Quarry Lease Plan Valid To');/*Label Text*/
            $("#trApprovalLetter").text('Quarry Plan & Approval Letter');/*Label Text*/
        }
    });
    function ValidateDsc(btnAction) {
        var Type;
        if (btnAction == 'Approve') {
            Type = 'Approve';
            $("#Remarks").prop('required', false);
        }
        else if (btnAction == 'Reject') {
            Type = 'Reject';
            $("#Remarks").prop('required', true);
            if ($("#Remarks").val() == "") {
                $("#Remarks").focus();
                swal("",'Remarks is required!',"warning")
                return;
            }
        }
        if (confirm("Before " + Type + " you need to apply your Digital Signature. Are you confirmed to " + Type + " Profile??")) {
            debugger;
            var Postdata = 'action=signdoc' + "\n" + 'datatosign=Digital Signature Required' + "\n" + 'signaction=sign' + "\n" + 'filepath=' + "\n" + 'panNumberParam=' + "\n" + 'expirycheck=false' + "\n" + 'issuername=' + "\n" + 'certclass=1|2|3' + "\n" + 'certtype=ALL';
            connection.send(Postdata);
            connection.onerror = function (error) {
                swal("",'Please check the server connection: ' + error+'',"warning");
            };
            connection.onmessage = function (e) { // when DSC is success then following function executed.
                if (e.data.indexOf("subProtocol") == -1) {
                    //debugger;
                    $("#DSCResponse").val(e.data).change();
                    $.ajax(
                    {
                        url: '@Url.Action("CheckVerifyResponse", "LesseeDetails", new { Area = "LesseeProfile" })',
                        type: "POST",
                        data: { contentType: "pkcs7", signDataBase64Encoded: e.data, responseType: "plain" },
                            success: function (msg) {
                                if (msg == "SUCCESS") {
                                //  debugger;
                                if (btnAction == "Approve") {
                                    $("#SubApprove").val("Approve");
                                }
                                if (btnAction == "Reject") {
                                    $("#SubReject").val("Reject");
                                }
                                $("#form1").submit();
                            }
                        }
                    });
                }
                else {
                    swal("",e.data,"warning");
                }
            };
        }
        else {
            return false;
        }
    }
    //following code is for DSC Signature
    try {
        var connection = new WebSocket('wss://localhost.emudhra.com:8080');
        connection.onopen = function () {
            console.log('Connection Opened');
        };
        connection.onerror = function (error) {
        };
        connection.onmessage = function (e) {
            if (e.data.indexOf("subProtocol") == -1) {
            }
        };
    }
    catch (e) {
        swal("","No DSC Connection Found","warning");
    }
    function CountAddress() {
        $("#lblRemarks").text(500 - (document.getElementById("Remarks").value.length));
    }
    function NextLeaseCTOQty() {
        $('#LeaseCTOQty').trigger('click');
        $('[href="#LeaseCTOQty"]').tab('show');
        $("#LeaseCTOQty").show();
        $('#LeaseCTO').hide();
        $("#step2").addClass('active');
        $("#step1").removeClass('active');
    }
    function BackLeaseCTOQty() {
        $('#LeaseCTO').trigger('click');
        $('[href="#LeaseCTO"]').tab('show');
        $("#LeaseCTO").show();
        $('#LeaseCTOQty').hide();
        $("#step1").addClass('active');
        $("#step2").removeClass('active');
    }
    function BackLeaseCTO() {
        $('#LeaseCTOQty').trigger('click');
        $('[href="#LeaseCTOQty"]').tab('show');
        $("#LeaseCTOQty").show();
        $('#LeaseCTO').hide();
        $("#step2").addClass('active');
        $("#step1").removeClass('active');
    }
</script>
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_CMSnavigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Compare
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_CMSutil")
                </div>
                <section class="box form-container">
                    <div class="content-body mt-3">
                        @using (Html.BeginForm("Compare", "LesseeMiningPlanDetails", FormMethod.Post, new { AUTOCOMPLETE = "Off", id = "form1", enctype = "multipart/form-data" }))
                        {
                            @(Html.HiddenFor(model => model.ElementAt(1).SubApprove))
                            @(Html.HiddenFor(model => model.ElementAt(1).SubReject))
                            @Html.HiddenFor(m => m.ElementAt(1).CREATED_BY)
                            @Html.HiddenFor(m => m.ElementAt(1).MINING_PLAN_ID)
                            @Html.AntiForgeryToken()
                            <ul class="nav nav-tabs progresstab" id="myTab" role="tablist">
                                <li class="startstep active" id="step1">
                                    <a id="LeaseCTO-tab" data-toggle="tab" href="#LeaseCTO" role="tab" aria-controls="LeaseCTO" aria-selected="true" onclick="BackLeaseCTOQty()">Mining Plan Details</a>
                                </li>
                                <li id="step2">
                                    <a id="LeaseCTOQty-tab" data-toggle="tab" href="#LeaseCTOQty" role="tab" aria-controls="LeaseCTOQty" aria-selected="false" onclick="BackLeaseCTO()">Mining Plan Approved Quantity Details</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div href="#LeaseCTO" class="tab-pane fade show active" id="LeaseCTO" role="tabpanel" aria-labelledby="LeaseCTO-tab">
                                    <h5 class="text-brown font-weight-bold mt-0 mb-4" id="h5text">Mining Plan</h5>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div id="viewtable">
                                                <table id="datatable" class="table table-sm table-bordered compare">
                                                    <thead>
                                                        <tr>
                                                            <th>Field Names</th>
                                                            <th>Existing Data</th>
                                                            <th>Modified Data</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td class="field-name" id="lblApprovalDate">Approval Date</td>
                                                            <td>@Model.ElementAt(0).MP_APPROVE_DATE</td>
                                                            <td>@Model.ElementAt(1).MP_APPROVE_DATE</td>
                                                            @if (Model.ElementAt(0).MP_APPROVE_DATE != Model.ElementAt(1).MP_APPROVE_DATE)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                        <tr>
                                                            <td class="field-name" id="lblApprovalNo">Approval Number</td>
                                                            <td>@Model.ElementAt(0).MP_APPROVAL_NO</td>
                                                            <td>@Model.ElementAt(1).MP_APPROVAL_NO</td>
                                                            @if (Model.ElementAt(0).MP_APPROVAL_NO != Model.ElementAt(1).MP_APPROVAL_NO)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                        <tr>
                                                            <td class="field-name" id="lblValidFrom">Valid From</td>
                                                            <td>@Model.ElementAt(0).MP_VALID_FORM</td>
                                                            <td>@Model.ElementAt(1).MP_VALID_FORM</td>
                                                            @if (Model.ElementAt(0).MP_VALID_FORM != Model.ElementAt(1).MP_VALID_FORM)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                        <tr>
                                                            <td class="field-name" id="lblValidTo">Valid Upto</td>
                                                            <td>@Model.ElementAt(0).MP_VALID_TO</td>
                                                            <td>@Model.ElementAt(1).MP_VALID_TO</td>
                                                            @if (Model.ElementAt(0).MP_VALID_TO != Model.ElementAt(1).MP_VALID_TO)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                        <tr>
                                                            <td class="field-name" id="trApprovalLetter">MP/SOM Approval Letter With Approved Table</td>
                                                            <td>
                                                                @if (Model.ElementAt(0).MP_SOM_FileName != null && Model.ElementAt(0).MP_SOM_FileName != "" && Model.ElementAt(0).MP_SOM_FileName != "--")
                                                                {
                                                                    <label class="form-control-plaintext">@(Model.ElementAt(0).MP_SOM_FileName) <a href='~/@Model.ElementAt(0).MP_SOM_FilePath' title="" class="ml-2" data-original-title="Download" target="_blank"><i class="icon-file-pdf-solid h5 text-danger"></i></a></label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (Model.ElementAt(1).MP_SOM_FileName != null && Model.ElementAt(1).MP_SOM_FileName != "" && Model.ElementAt(1).MP_SOM_FileName != "--")
                                                                {
                                                                    <label class="form-control-plaintext">@(Model.ElementAt(1).MP_SOM_FileName) <a href='~/@Model.ElementAt(1).MP_SOM_FilePath' title="" class="ml-2" data-original-title="Download" target="_blank"><i class="icon-file-pdf-solid h5 text-danger"></i></a></label>
                                                                }
                                                            </td>
                                                            @if (Model.ElementAt(0).MP_SOM_FileName != Model.ElementAt(1).MP_SOM_FileName)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                        <tr>
                                                            <td class="field-name">Remarks</td>
                                                            <td>@Model.ElementAt(0).Remarks</td>
                                                            <td>@Model.ElementAt(1).Remarks</td>
                                                            @if (Model.ElementAt(0).Remarks != Model.ElementAt(1).Remarks)
                                                            {
                                                                <td class="text-center"><i class="icon-arrow-alt-circle-left-solid text-danger h4"></i></td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-sm-12 text-center">
                                            <a class="btn btn-primary btn-md ml-0 waves-effect waves-light btnNext" onclick="NextLeaseCTOQty()">Next</a>
                                        </div>
                                    </div>
                                </div>
                                <div href="#LeaseCTOQty" class="tab-pane fade" id="LeaseCTOQty" role="tabpanel" aria-labelledby="LeaseCTOQty-tab">
                                    <h5 class="text-brown font-weight-bold mt-0 mb-4">Scheme of Mines</h5>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div id="viewtable">
                                                @Html.Raw((String)ViewBag.tableLA)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-sm-12 text-center">
                                            <a class="btn btn-dark btn-md ml-0 waves-effect waves-light btnPrevious" onclick="BackLeaseCTOQty()">Previous</a>
                                            <input data-toggle="modal" data-target="#approve" type="button" value="Approve" class="btn btn-success btn-md btnsave" name="Approve" style="display:none;" />
                                            <input data-toggle="modal" data-target="#reject" type="button" value="Reject" class="btn btn-danger btn-md btnsave" name="Reject" style="display:none;" />
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade approve" id="approve" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog  modal-dialog-centered">
                                        <div class="modal-content text-center">
                                            <div class="modal-body">
                                                <h5>Are You Sure to Approve the Information !! </h5>
                                                <button type="button" class="btn btn-success btn-md" onclick="return ValidateDsc('Approve');">Yes</button>
                                                <button type="button" class="btn btn-danger btn-md" data-dismiss="modal">No</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="reject" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title mt-0 font-weight-bold" id="H1">Rejection Remark</h5>
                                                <a class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </a>
                                            </div>
                                            <div class="modal-body">
                                                <label>Remark<span class="text-danger">*</span></label>
                                                @Html.TextAreaFor(m => m.ElementAt(1).Remarks, new { @class = "form-control", @maxlength = "500", @rows = "2", @onkeyup = "CountAddress()" })
                                                <small class="text-danger">Maximum <strong><label id="lblRemarks" class="col-form-label">500</label></strong> characters</small>
                                                <input type="button" class="btn btn-success btn-md mt-4" name="Reject" value="Submit" onclick="return ValidateDsc('Reject');" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>


