@*// *********************************************************************************************************
    //  View Name                : ApprovalLetter
    //  Desciption               : Vehicle BreakDown Approval Letter
    //  Created By               : Akshaya Dalei
    //  Created On               : 25 July 2021
    // ********************************************************************************************************
*@
@{
    ViewBag.Title = "Approval Letter";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@model IEnumerable<userregistrationEF.VehicleBreakdown>
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_CMSnavigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Print Vehicle BreakDown Request
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_CMSutil")
                </div>

                <section class="box form-container">
                    <div class="search-box">
                        <form action="ApprovalLetter" method="get">
                            <div class="searchform px-3 pt-3">
                                <div class="row">

                                    <div class="col-sm-5">
                                        <div class="form-group row">
                                            <label for="inputText" class="col-sm-3 col-form-label"> From date</label>
                                            <div class="col-sm-8">
                                                <input type="text" id="txtFromdate" name="FromDate" class="form-control datepicker" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group row">
                                            <label for="inputText" class="col-sm-3 col-form-label">To date</label>
                                            <div class="col-sm-8">
                                                <input type="text" id="txtTodate" name="ToDate" class="form-control datepicker" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group row">
                                            <input type="submit" value="Show" class="btn btn-sm btn-success m-0">
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="content-body">
                        <div class="row" style="overflow-x: auto">

                            <div class="col-sm-12">
                                <table id="table-exports" class="table table-sm table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>Location Of Breakdown</th>
                                            <th>Reason Of Breakdown</th>
                                            <th>New Assigned Vehicle</th>
                                            <th>Breakdown Date</th>
                                            <th>Download</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.SrNo</td>
                                                    <td>@item.LocationOfBreakDown</td>
                                                    <td>@item.ReasonOfBreakDown</td>
                                                    <td>@item.VehicleNumber</td>
                                                    <td>@item.BreakDownDate</td>
                                                    <td>
                                                        <a href='/VehicleOwner/Vehicle/DownloadLetter?id=@item.BreakDownId'>View Details</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section> 
<script>
    $(document).ready(function () {
        loadNavigation('Vehicle', 'ql', 'pl', 'tl', 'Vehicle', 'Approval Letter', ' ');
    });

</script>