
@{
    ViewData["Title"] = "ViewPermit";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@inject EpassApp.KhanijSecurity.KhanijIDataProtection protector;
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @*<uc1:navigation runat="server" ID="navigation" />*@
        @Html.Partial("_CMSnavigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">

                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Purchaser Consignee
                            </a>
                        </li>
                    </ul>
                    @*<uc1:util runat="server" ID="util" />*@
                    @Html.Partial("_CMSutil")
                </div>

                <section class="box form-container">
                    <div class="search-box">
                        <div class="searchform px-3 pt-3">
                            <div class="row">


                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputText" class="col-sm-3 col-form-label">
                                            From Date
                                        </label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <input type="text" class="form-control datepicker" id="inputDate1">
                                                <div class="input-group-prepend">
                                                    <label class="input-group-text" for="inputDate1"><i class="far fa-calendar"></i></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputText" class="col-sm-3 col-form-label">
                                            To Date
                                        </label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <input type="text" class="form-control datepicker" id="inputDate2">
                                                <div class="input-group-prepend">
                                                    <label class="input-group-text" for="inputDate2"><i class="far fa-calendar"></i></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <div class="col-sm-2">
                                    <a href="#" class="btn btn-sm btn-success m-0 waves-effect waves-light"> Show </a>
                                </div>


                            </div>
                        </div>

                    </div>

                    <div class="content-body pt-0">
                        <div class="legend-box">
                            <ul class="d-flex mb-1 justify-content-end list-unstyled">
                                <li><span class="bg-success"></span> Active</li>
                                <li><span class="bg-warning"></span> Inactive</li>
                            </ul>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive" id="viewtable">
                                    <table id="datatable" class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>E-Permit No.</th>
                                                <th>Mineral Name</th>
                                                <th>Unit</th>
                                                <th>Mineral Form</th>
                                                <th>Mineral Grade</th>
                                                <th>Paid Royality</th>
                                                <th>Payment Mode</th>
                                                <th>Total Qty</th>
                                                <th>Dispatched Qty</th>
                                                <th>balance Qty</th>
                                                <th width="100" class="noprint">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="active-row">
                                                <td>EP_NO_0011113</td>
                                                <td>Dolomite</td>
                                                <td>Metric Tonne</td>
                                                <td>NOT APPLICABLE</td>
                                                <td>Industrial Use (Mgo&gt;18% or SiO2&lt;6%)</td>
                                                <td>900.000</td>
                                                <td>ONLINE</td>
                                                <td>10.000</td>
                                                <td> Dispatched Qty: 0.000 </td>
                                                <td> Dispatched Qty: 0.000 </td>
                                                <td>
                                                    <a href="AddPurchaser.aspx"
                                                       class="btn-floating btn-outline-success btn-sm"
                                                       title="Delete">Add Purchaser</a>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>


                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>

