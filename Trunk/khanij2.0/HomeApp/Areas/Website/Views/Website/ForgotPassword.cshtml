
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    <div class="logo-section">
        <a class="navbar-brand" href="Default.aspx">
            <img src="~/img/govt-logo.png" class="login-logo" alt="Logo" />
            <h4>
                Mineral Resources Department
                <small class="d-block">Government of Chhattisgarh</small>
            </h4>
        </a>
    </div>
    <div class="login-box">
        <div class="left-sec-img">
            <img src="~/img/crane.png" class="left-sec-img-bg" alt="login-image" />
            <img src="~/img/ores.png" class="ore-img" alt="login-image" />
            <div class="welcome-text">
                <h2 class="mb-0">

                    <small>Welcome to </small>
                    Khanij Online Portal
                </h2>

            </div>
        </div>

        <div class="right-sec-content">
            @*<div class="home"> <a href="/Website/Website/home" title="Go to Website " class="text-brown"><i class="fas fa-home fa-1x"></i></a></div>*@
            <img src="~/img/khanijonline22.png" class="khanij-mineral-logo" alt="login-image" />
            <div class="login-body">
                <h2 class="mb-3">Reset Password</h2>
                <div class="form-group">
                    <div class="input-group">

                        <div class="addon"><i class="fas fa-user"></i></div>

                        <input type="text" class="form-control" placeholder="Enter User Id">
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:.5rem">
                    <div class="input-group">
                        <input type="radio" class="" checked="checked" name="rdVerification"> Using OTP On Mobile
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input type="radio" class="" name="rdVerification"> Using OTP On Mail
                    </div>
                </div>

                <div id="mobOTP">
                    <div class="form-group">
                        <div class="input-group send-otp">
                            <div class="addon"><i class="fas fa-mobile"></i></div>
                            <input type="text" class="form-control" placeholder="Mobile Number">
                            <a class="log-link send-otp-btn" href="#!">Send</a>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="addon"><i class="fas fa-key"></i></div>
                        <input type="text" class="form-control" placeholder="OTP/Verification Code">
                    </div>
                </div>

                <a href="dashboard/Dashboard" class="log-link">Submit</a>
                <div class="text-center">
                    <a href="/Home/Index"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Back to Login</a>
                </div>
            </div>

        </div>
    </div>
</div>
