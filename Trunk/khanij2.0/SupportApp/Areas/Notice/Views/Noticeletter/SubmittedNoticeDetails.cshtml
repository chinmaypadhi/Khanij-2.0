@model SupportEF.NoticeLetterEF
@{
    ViewData["Title"] = "SubmittedNoticeDetails";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
<script>
    $(document).ready(function () {
        loadNavigation('SubmittedNoticeDetails', 'glTMng', 'plpaymenthead', 'tl', 'Notice', ' Submitted Notice Details', ' ');
    });
</script>
<section class="wrapper main-wrapper row">
    <div class="col-12">
        @Html.Partial("_CMSnavigation")
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="row">
            <div class="col-12">
                <div class="main-tab">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="javascript:void(0);">
                                Submitted Notice Details
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_CMSutil")
                </div>
                <section class="box form-container">
                    <div class="content-body">
                        @using (Html.BeginForm("SubmittedNoticeDetails", "Noticeletter", FormMethod.Post, new { enctype = "multipart/form-data", AUTOCOMPLETE = "Off", id = "form1" }))
                        {

                            @foreach (var b in ViewBag.NoticeDetails)
                            {
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <label class="col-form-label font-weight-bolder pt-0">Subject</label>
                                        <p class="m-0">@b.NoticeSubject</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <label class="col-form-label font-weight-bolder">Message</label>
                                        <p class="m-0"> @b.NoticeDescription</p>
                                    </div>
                                </div>
                            }
                            @foreach (var c in ViewBag.NoticeFileList)
                            {

                                <div class="form-group row">
                                    <div class="col-sm-4">
                                        <label class="col-form-label font-weight-bolder">Attachment</label>
                                        <div class="custom-file">
                                            @*<a href="c.FilePath" title="Download">@c.FileName</a>*@
                                           @Html.ActionLink((string)c.FileName, "DownloadFile",new {filename= @c.FilePath })
                                           
                                        </div>
                                    </div>

                                </div>
                            }

                                @*<div class="form-group row">
                    <div class="col-sm-12">
                        <input type="submit" value='@ViewBag.Button' class="btn btn-primary btn-md ml-0" name="submit" id="submit" />
                        <a href="#" class="btn btn-danger btn-md">Reset</a>
                    </div>
                </div>*@
                            }
                        </div>
                </section>
            </div>
        </div>
    </div>
    <!-- MAIN CONTENT AREA ENDS -->
</section>